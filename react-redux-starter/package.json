{
  "name": "react-redux-starter",
  "version": "1.0.0",
  "description": "Starter kit for React and Redux",
  "scripts": {
    "analyse": "./node_modules/.bin/webpack --config tools/webpack.config.dev.babel.js --profile --json >> bundle-stats.json",
    "clean": "./node_modules/.bin/rimraf bundle-stats.json npm-debug.log static/ .github/ .nyc_output/ coverage/ static/",
    "dev": "babel-node tools/src-server.js",
    "flow": "flow",
    "lint": "node_modules/.bin/esw --config tools/lint-config.js webpack.config.* src tools",
    "lint:watch": "npm run lint -- --watch",
    "prestart": "babel-node tools/start-message.js",
    "start": "npm-run-all --parallel dev test:watch lint:watch",
    "test": "ava",
    "test:cover": "nyc ava",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Sherub Thakur",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "env": {
      "development": {
        "sourceMaps": "inline"
      },
      "production": {
        "plugins": [
          "transform-react-remove-prop-types",
          "transform-react-constant-elements",
          "transform-react-inline-elements"
        ]
      }
    }
  },
  "ava": {
    "verbose": true,
    "files": [
      "src/**/*.test.js"
    ],
    "source": [
      "src/**/*.{js,jsx}",
      "!dist/**/*",
      "!coverage/**/*",
      "!src/**/*.test.js"
    ],
    "match": [],
    "concurrency": 5,
    "failFast": true,
    "tap": true,
    "require": [
      "./tools/test-helpers.js"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "src/**/*.test.js"
    ],
    "extension": [
      ".jsx",
      ".js"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.8.0",
    "bootstrap": "^3.3.6",
    "immutable": "^3.8.1",
    "material-ui": "^0.15.0",
    "react": "^15.0.2",
    "react-addons-pure-render-mixin": "^15.1.0",
    "react-dom": "^15.0.2",
    "react-icons": "^2.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "react-router-redux": "^4.0.4",
    "react-tap-event-plugin": "^1.0.0",
    "redux": "^3.5.2",
    "redux-form": "^6.0.5",
    "redux-thunk": "^2.0.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-display-name": "^2.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "enzyme": "^2.3.0",
    "eslint": "^3.2.2",
    "eslint-plugin-flowtype": "^2.19.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-react": "^6.0.0",
    "eslint-watch": "^2.1.11",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.33.0",
    "jsdom": "^9.2.1",
    "npm-run-all": "^3.1.0",
    "nyc": "^7.1.0",
    "open": "^0.0.5",
    "react-addons-test-utils": "^15.0.2",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-immutable-state-invariant": "^1.2.3",
    "redux-mock-store": "^1.0.2",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "2.1.0-beta.22",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jckdrpr/frontend-boilerplate/react-redux-starter"
  }
}
